{
  "manifest_version": 3,
  "name": "Link Saver",
  "version": "1.0.0",
  "description": "Save URLs with AI-powered summarization and Q&A",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
